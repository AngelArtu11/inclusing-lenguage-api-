<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InclusingLenguage._03_Views.RegisterPage"
             Title="RegisterPage"
             BackgroundColor="#00131F">
    <ScrollView>
        <Grid Padding="30,40,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="20" Margin="0,0,0,30">

                <!-- Logo pequeño -->
                <Frame BackgroundColor="#13B7FF" 
                       CornerRadius="40" 
                       HeightRequest="80" 
                       WidthRequest="80" 
                       HorizontalOptions="Center"
                       HasShadow="True">
                    <Label Text="🤟" 
                           FontSize="35" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                </Frame>

                <!-- Título -->
                <StackLayout Spacing="8">
                    <Label Text="Crea tu cuenta" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>

                    <Label Text="Únete a la comunidad de SignLearn" 
                           FontSize="16" 
                           TextColor="#86CBFF" 
                           HorizontalOptions="Center" 
                           HorizontalTextAlignment="Center"/>
                </StackLayout>

            </StackLayout>

            <!-- Registration Form -->
            <StackLayout Grid.Row="1" Spacing="18">

                <!-- First Name Entry -->
                <StackLayout Spacing="8">
                    <Label Text="Nombre" 
                           TextColor="#C4E2FF" 
                           FontSize="14"
                           Margin="5,0,0,0"/>
                    <Frame BackgroundColor="#002132" 
                           BorderColor="#0073A3"
                           HasShadow="True"
                           CornerRadius="15" 
                           Padding="0">
                        <StackLayout Orientation="Horizontal" Padding="20,0" Spacing="15">
                            <Label Text="👤" 
                                   FontSize="20" 
                                   VerticalOptions="Center"
                                   TextColor="#13B7FF"/>
                            <Entry x:Name="FirstNameEntry" 
                                   Placeholder="Tu nombre" 
                                   PlaceholderColor="#86CBFF"
                                   TextColor="White" 
                                   BackgroundColor="Transparent"
                                   VerticalOptions="Center"
                                   FontSize="16"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Last Name Entry -->
                <StackLayout Spacing="8">
                    <Label Text="Apellido" 
                           TextColor="#C4E2FF" 
                           FontSize="14"
                           Margin="5,0,0,0"/>
                    <Frame BackgroundColor="#002132" 
                           BorderColor="#0073A3"
                           HasShadow="True"
                           CornerRadius="15" 
                           Padding="0">
                        <StackLayout Orientation="Horizontal" Padding="20,0" Spacing="15">
                            <Label Text="👥" 
                                   FontSize="20" 
                                   VerticalOptions="Center"
                                   TextColor="#13B7FF"/>
                            <Entry x:Name="LastNameEntry" 
                                   Placeholder="Tu apellido" 
                                   PlaceholderColor="#86CBFF"
                                   TextColor="White" 
                                   BackgroundColor="Transparent"
                                   VerticalOptions="Center"
                                   FontSize="16"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Email Entry -->
                <StackLayout Spacing="8">
                    <Label Text="Correo electrónico" 
                           TextColor="#C4E2FF" 
                           FontSize="14"
                           Margin="5,0,0,0"/>
                    <Frame BackgroundColor="#002132" 
                           BorderColor="#0073A3"
                           HasShadow="True"
                           CornerRadius="15" 
                           Padding="0">
                        <StackLayout Orientation="Horizontal" Padding="20,0" Spacing="15">
                            <Label Text="📧" 
                                   FontSize="20" 
                                   VerticalOptions="Center"
                                   TextColor="#13B7FF"/>
                            <Entry x:Name="EmailEntry" 
                                   Placeholder="tucorreo@ejemplo.com" 
                                   PlaceholderColor="#86CBFF"
                                   TextColor="White" 
                                   BackgroundColor="Transparent"
                                   Keyboard="Email"
                                   VerticalOptions="Center"
                                   FontSize="16"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Password Entry -->
                <StackLayout Spacing="8">
                    <Label Text="Contraseña" 
                           TextColor="#C4E2FF" 
                           FontSize="14"
                           Margin="5,0,0,0"/>
                    <Frame BackgroundColor="#002132" 
                           BorderColor="#0073A3"
                           HasShadow="True"
                           CornerRadius="15" 
                           Padding="0">
                        <StackLayout Orientation="Horizontal" Padding="20,0" Spacing="15">
                            <Label Text="🔒" 
                                   FontSize="20" 
                                   VerticalOptions="Center"
                                   TextColor="#13B7FF"/>
                            <Entry x:Name="PasswordEntry" 
                                   Placeholder="Mínimo 6 caracteres" 
                                   PlaceholderColor="#86CBFF"
                                   TextColor="White" 
                                   BackgroundColor="Transparent"
                                   IsPassword="True"
                                   VerticalOptions="Center"
                                   FontSize="16"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Confirm Password Entry -->
                <StackLayout Spacing="8">
                    <Label Text="Confirmar contraseña" 
                           TextColor="#C4E2FF" 
                           FontSize="14"
                           Margin="5,0,0,0"/>
                    <Frame BackgroundColor="#002132" 
                           BorderColor="#0073A3"
                           HasShadow="True"
                           CornerRadius="15" 
                           Padding="0">
                        <StackLayout Orientation="Horizontal" Padding="20,0" Spacing="15">
                            <Label Text="🔐" 
                                   FontSize="20" 
                                   VerticalOptions="Center"
                                   TextColor="#13B7FF"/>
                            <Entry x:Name="ConfirmPasswordEntry" 
                                   Placeholder="Repite tu contraseña" 
                                   PlaceholderColor="#86CBFF"
                                   TextColor="White" 
                                   BackgroundColor="Transparent"
                                   IsPassword="True"
                                   VerticalOptions="Center"
                                   FontSize="16"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Terms and Conditions -->
                <StackLayout Orientation="Horizontal" 
                            Spacing="10"
                            Margin="5,10,0,0">
                    <CheckBox x:Name="TermsCheckBox" 
                             Color="#13B7FF"
                             VerticalOptions="Start"/>
                    <Label VerticalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Acepto los " 
                                      TextColor="#C4E2FF" 
                                      FontSize="13"/>
                                <Span Text="Términos y Condiciones" 
                                      TextColor="#13B7FF" 
                                      FontSize="13"
                                      TextDecorations="Underline"/>
                                <Span Text=" y la " 
                                      TextColor="#C4E2FF" 
                                      FontSize="13"/>
                                <Span Text="Política de Privacidad" 
                                      TextColor="#13B7FF" 
                                      FontSize="13"
                                      TextDecorations="Underline"/>
                            </FormattedString>
                        </Label.FormattedText>
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTermsTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>

                <!-- Register Button -->
                <Button x:Name="RegisterButton" 
                        Text="Crear Mi Cuenta" 
                        BackgroundColor="#13B7FF" 
                        TextColor="White" 
                        CornerRadius="15" 
                        HeightRequest="55"
                        FontSize="18"
                        FontAttributes="Bold"
                        Margin="0,20,0,0"
                        Clicked="OnRegisterClicked">
                    <Button.Shadow>
                        <Shadow Brush="#13B7FF" 
                                Offset="0,4" 
                                Radius="10" 
                                Opacity="0.3"/>
                    </Button.Shadow>
                </Button>

                <!-- Loading Indicator -->
                <StackLayout x:Name="LoadingLayout" 
                            IsVisible="False"
                            Orientation="Horizontal" 
                            HorizontalOptions="Center" 
                            Spacing="10"
                            Margin="0,10,0,0">
                    <ActivityIndicator x:Name="LoadingIndicator" 
                                      IsRunning="False" 
                                      Color="#13B7FF"
                                      VerticalOptions="Center"/>
                    <Label x:Name="LoadingLabel" 
                           Text="Creando tu cuenta..." 
                           TextColor="#86CBFF" 
                           FontSize="14"
                           VerticalOptions="Center"/>
                </StackLayout>

                <!-- Already have account -->
                <StackLayout Orientation="Horizontal" 
                            HorizontalOptions="Center" 
                            Spacing="5"
                            Margin="0,20,0,0">
                    <Label Text="¿Ya tienes una cuenta?" 
                           TextColor="#C4E2FF" 
                           FontSize="14"
                           VerticalOptions="Center"/>
                    <Label Text="Inicia Sesión" 
                           TextColor="#13B7FF" 
                           FontSize="14"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLoginTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>

                <!-- Bottom Padding -->
                <BoxView HeightRequest="20" BackgroundColor="Transparent"/>

            </StackLayout>

        </Grid>
    </ScrollView>
</ContentPage>